{
    "name": "mkgrow/content-control",
    "description": "Uma extenção para o PhpWord",
    "require": {
        "phpoffice/phpword": "^1.4",
        "ext-dom": "*"
    },
    "autoload": {
        "psr-4": {
            "MkGrow\\ContentControl\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Mateus Bandeira",
            "email": "mateusbandeiraweb@gmail.com"
        }
    ],
    "require-dev": {
        "pestphp/pest": "^3.0",
        "phpstan/phpstan": "2.0",
        "phpstan/phpstan-strict-rules": "2.0"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "pest",
        "test:unit": "pest tests/Unit",
        "test:feature": "pest tests/Feature",
        "test:coverage": "pest --coverage --coverage-clover=coverage/clover.xml --min=80",
        "test:coverage-html": "pest --coverage-html coverage/html",
        "analyse": "phpstan analyse",
        "analyse:baseline": "phpstan analyse --generate-baseline",
        "check": [
            "@analyse",
            "@test"
        ],
        "ci": [
            "@analyse",
            "@test"
        ]
    },
    "scripts-descriptions": {
        "test": "Executa todos os testes",
        "test:unit": "Executa apenas testes unitários",
        "test:feature": "Executa apenas testes de feature",
        "test:coverage": "Executa testes com cobertura mínima de 80%",
        "test:coverage-html": "Gera relatório HTML de cobertura",
        "analyse": "Executa análise estática com PHPStan",
        "analyse:baseline": "Gera baseline do PHPStan",
        "check": "Executa análise e testes",
        "ci": "Comando completo para CI/CD"
    }
}
